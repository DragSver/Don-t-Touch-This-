<Window x:Class="Dont_touch_this.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dont_touch_this"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid x:Name="grid" Background="#FFF6EAEA">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox IsEnabled = "False" Name = "textbox1" Text = "Нажмите 10 раз за 3 секунды" 
                 HorizontalAlignment = "Center" VerticalAlignment = "Center" FontSize = "20" 
                 TextWrapping = "Wrap" BorderBrush = "{x:Null}" Background = "{x:Null}" FontFamily="Segoe UI Black" />
        <Button Content = "10" Grid.Row = "1" Padding = "25,5,25,5"  HorizontalAlignment = "Center" VerticalAlignment = "Center"
        MinWidth = "25" MinHeight = "60" x:Name = "button" Background = "#FFFFA4A4" BorderBrush = "{x:Null}" FontSize = "50" FontWeight = "Bold" 
        Click = "Button_Click" />
    </Grid>
</Window>
